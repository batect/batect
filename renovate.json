{
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "reviewers": [
    "charleskorn"
  ],
  "automerge": true,
  "labels": ["is:dependency-update"],
  "rebaseWhen": "behind-base-branch",
  "regexManagers": [
    {
      "fileMatch": [
        ".groovy$",
        ".gradle$"
      ],
      "matchStrings": [
        "ktlint\\(\"(?<currentValue>.*?)\"\\)"
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "com.pinterest:ktlint"
    }
  ]
}
